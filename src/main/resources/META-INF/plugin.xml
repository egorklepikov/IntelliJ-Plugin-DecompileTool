<idea-plugin>
    <id>org.example.IntelliJ-Plugin-DecompileTool</id>
    <name>APK Injector</name>
    <vendor email="egor.klepikov@jetbrains.com" url="https://www.jetbrains.com/">JetBrains</vendor>

    <description>Plugin allows to adapt the APK file for debugging.</description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.plugin.decompiletool.settings.AppSettingsState"/>
        <applicationConfigurable parentId="tools" instance="com.plugin.decompiletool.settings.AppSettingsConfigurable"
                                 id="com.plugin.decompiletool.settings.AppSettingsConfigurable"
                                 displayName="Decompile Tool"/>
    </extensions>

    <actions>
        <action id="com.plugin.decompiletool.actions.ProcessApkAction"
                class="com.plugin.decompiletool.actions.ProcessApkAction"
                text="Process APK">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>